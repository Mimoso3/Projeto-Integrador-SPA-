#ifndef BUTTONS_H
#define BUTTONS_H

#define BTN_MODE 7
#define BTN_RESET 10

int modo = 0;

void initButtons() {
  pinMode(BTN_MODE, INPUT_PULLUP);
  pinMode(BTN_RESET, INPUT_PULLUP);
}

void checkButtons() {
  if (!digitalRead(BTN_MODE)) {
    modo = (modo + 1) % 3;
    delay(250);
  }

  if (!digitalRead(BTN_RESET)) {
    modo = 0;
    delay(250);
  }
}

#endif
